<style>
  .register {
    form {
      display: flex;
      flex-direction: column;

      label:not([for="accepts-marketing"]) {
        visibility: hidden;
      }

      input {
        border-bottom: 1px solid #D1D5DB;
        padding: 5px;
        color: #000;
        outline: none;
      }

      input:focus {
        border-bottom: 1px solid #000;
      }

      input::placeholder {
        color: #D1D5DB;
      }
    }
  }
</style>

<div class="cwidth flex !mt-16">
  <div class="register w-[90%] md:w-[40%] mx-auto">
    <div>
      <h1 class="text-xl mb-4 font-bold">Enter new password</h1>
    </div>

    {% form 'reset_customer_password' %}

      <div class="mt-4">{{ form.errors | default_errors }}</div>

      <div class="password">
        <input
          type="password"
          name="customer[password]"
          placeholder="Enter new password"
          id="password">
        <label for="password">Password</label>
      </div>

      <div class="password_confirm">
        <input
          type="password"
          placeholder="Confirm password"
          name="customer[password_confirmation]"
          id="password_confirmation">
        <label for="password_confirmation">Confirm password</label>
      </div>

      <button type="submit" class="my-4 w-full inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium text-white bg-black hover:bg-white hover:text-black hover:border-black focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-500">Change password</button>

    {% endform %}
  </div>
</div>